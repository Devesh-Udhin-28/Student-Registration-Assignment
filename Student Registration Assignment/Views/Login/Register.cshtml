@{
    ViewBag.Title = "RegisterForm";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript" src="~/Scripts/Login_Register.js"></script>
    <link rel="stylesheet" href="~/Content/registerForm.css" />
</head>
<body>
    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">

                                <form class="mx-1 mx-md-4" name="register">

                                    <div>
                                        <i class="fa-solid fa-arrow-left"></i> @Html.ActionLink("Back to Sign-in Page", "Index", null, new { @class = "back h6 fst-italic" })
                                    </div>

                                    <div>
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Student Registration Form</p>
                                    </div>

                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 display" style="margin-right:5%;">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-regular fa-id-card fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="nid" class="form-control" placeholder="National Identity Number" />
                                                <div id="errNid" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="name" class="form-control" placeholder="First Name" />
                                                <div id="errName" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-signature fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="surname" class="form-control" placeholder="Surname" />
                                                <div id="errSurname" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-calendar-days fa-lg me-3 fa-fw"></i>
                                            <i class="fa-solid fa-input-numeric"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="number" id="age" class="form-control" placeholder="Age" />
                                                <div id="errAge" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-cake-candles fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="date" id="dob" class="form-control" placeholder="Date Of Birth" />
                                                <div id="errDob" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-person fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="guardian" class="form-control" placeholder="Guardian Name" />
                                                <div id="errGuardian" class="err"></div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 display">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-globe fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="country" class="form-control" placeholder="Country" />
                                                <div id="errCountry" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-location-dot fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="address" class="form-control" placeholder="Address" />
                                                <div id="errAddress" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-phone fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="phone" class="form-control" placeholder="Phone Number" />
                                                <div id="errPhone" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-envelope fa-lg fa-fw me-3"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="email" class="form-control" placeholder="Email Address" />
                                                <div id="errEmail" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="passwd" class="form-control" placeholder="Password" />
                                                <div id="errPasswd" class="err"></div>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="passwdConfirm" class="form-control" placeholder="Repeat your password" />
                                                <div id="errPasswdConfirm" class="err"></div>
                                            </div>
                                        </div>
                                        <div id="errPasswd"></div>

                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="button" id="Register" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>



