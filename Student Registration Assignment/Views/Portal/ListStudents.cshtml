    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <title></title>
</head>
<body>


    <div id="dvEmployeeDetails" class="jumbotron">

        <h2>List of Students</h2>

        <table id="employeeDetailsTable" class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nation ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Country</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Email Address</th>
                    <th>Guardian Name</th>
                    <th>Date of Birth</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var student in ViewBag.StudentsList)
                {
                    <tr>

                        <td>@student.StudentIdentityNumber</td>
                        <td>@student.Name</td>
                        <td>@student.Surname</td>
                        <td>@student.Age</td>
                        <td>@student.Country</td>
                        <td>@student.Address</td>
                        <td>@student.PhoneNumber</td>
                        <td>@student.EmailAddress</td>
                        <td>@student.GuardianName</td>
                        <td>@student.DateOfBirth</td>

                    </tr>
                }
            </tbody>
        </table>

        @Html.ActionLink("Extract CSV form", "ExtractCSV", "Portal", null, new { @class = "btn btn-primary" })

    </div>

